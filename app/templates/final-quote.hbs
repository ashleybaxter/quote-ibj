<section class="content content--small content--right">
  <form class="form">
    <div class="form__group form__group--large">
      <label class="form__group__label">
        Card Number
      </label>
      <div {{bind-attr class=":form__control"}}>
        <div class="input-price"><i class="ss-creditcard"></i></div>
        {{input type="text" value=ccNumber placeholder="Card Number"}}
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        Expiry date
      </label>
      <div {{bind-attr class=":form__control"}}>
        <div class="input-price"><i class="ss-creditcard"></i></div>
        {{input type="text" value=ccExpiry placeholder="MM/YY"}}
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        Last 3 digits from the card number on the back
      </label>
      <div {{bind-attr class=":form__control"}}>
        <div class="input-price"><i class="ss-creditcard"></i></div>
        {{input type="text" value=ccCSV placeholder="CSV"}}
      </div>
    </div>
  </form>
  <div class="content__footer clearfix">
    <button {{bind-attr class=":btn isPaymentValid::btn--inactive"}} {{action 'pay'}} class="btn">
      Pay {{format-currency quoteTotal}} Securely
      <i class="ss-lock"></i>
    </button>
  </div>
</section>


<section class="content content--left content--container content--fixed">
  <h3>Pay</h3>
