<section class="content">
  <form class="form">
    <h1>Get a Quote</h1>
    <p class="margin-bottom-20">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
    <hr />

    <div class="form__group">
      <label class="form__group__label">
        <span class="step-no">1</span>
        Occupation:
      </label>
      <div class="form__control">
        <div class="btn-group radio-btn-group">
          {{#btn-group-radio-input groupValue=occupation value="designer"}}
            <span class="btn__title">
              <i class="ss-pencilbrush"></i>
              Designer
            </span>
            <span class="btn__msg ss-delete">Awesome choice dude!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=occupation value="developer"}}
            <span class="btn__title">
              <i class="ss-tools"></i>
              Developer
            </span>
            <span class="btn__msg ss-delete">Building shit is cool!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=occupation value="consultant"}}
            <span class="btn__title">
              <i class="ss-binoculars"></i>
              Consultant
            </span>
            <span class="btn__msg ss-delete">You go, big boy!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=occupation value="other"}}
            <span class="btn__title">
              <i class="ss-database"></i>
              Other
            </span>
            <span class="btn__msg ss-delete">
              {{input type="text" value=otherOccupation}}
            </span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>

    <div class="form__group">
      <label class="form__group__label">
        <span class="step-no">2</span>
        Experience:
      </label>
      <div class="form__control">
        <div class="btn-group radio-btn-group">
          {{#btn-group-radio-input groupValue=experience value="<1"}}
            <span class="btn__title">
              <i class="ss-home"></i>
              1 year or less
            </span>
            <span class="btn__msg ss-delete">You're just getting started and thats great!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=experience value="1-3"}}
            <span class="btn__title">
              <i class="ss-school"></i>
              1-3 years
            </span>
            <span class="btn__msg ss-delete">Looks like everything is going well!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=experience value="3-5"}}
            <span class="btn__title">
              <i class="ss-warehouse"></i>
              3-5 years
            </span>
            <span class="btn__msg ss-delete">I see you've experience at this</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=experience value=">5"}}
            <span class="btn__title">
              <i class="ss-castle"></i>
              5 years +
            </span>
            <span class="btn__msg ss-delete">Woah, long time, awesome!</span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        <span class="step-no">3</span>
        Business Type:
      </label>
      <div class="form__control">
        <div class="radio-btn-group">
          {{#btn-group-radio-input groupValue=businessType value="one" classNames="btn--large"}}
            <span class="btn__title">
              <i class="ss-school"></i>
              1-3 years
            </span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=businessType value="two" classNames="btn--large"}}
            <span class="btn__title">
              <i class="ss-school"></i>
              1-3 years
            </span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=businessType value="three" classNames="btn--large"}}
            <span class="btn__title">
              <i class="ss-school"></i>
              1-3 years
            </span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        <span class="step-no">4</span>
        How many employees do you have?
      </label>
      <div {{bind-attr class=":form__control isNumberOfEmployeesValid:form__control--invalid"}}>
        <div class="input-price"><i class="ss-malefemale"></i></div>
        {{input type="text" value=numberOfEmployees placeholder=""}}
        {{#unless isNumberOfEmployeesValid}}
          <div class="form__control__error">
            You must enter a number
          </div>
        {{/unless}}
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        <span class="step-no">5</span>
        Sum insured for Public Liability:
      </label>
      <div {{bind-attr class=":form__control isPublicLiabilityValid:form__control--invalid"}}>
        <div class="input-price">£</div>
        {{input type="text" value=publicLiability placeholder="How much insurance are you looking for?"}}
        {{input type="range" value=publicLiability min=1000 max=1000000 step=1000}}
        {{#unless isPublicLiabilityValid}}
          <div class="form__control__error">
            You must enter a number
          </div>
        {{/unless}}
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        <span class="step-no">6</span>
        Sum insured for Employers Liability:
      </label>
      <div {{bind-attr class=":form__control isEmployersLiabilityValid:form__control--invalid"}}>
        <div class="input-price">£</div>
        {{input type="text" value=employersLiability placeholder="How much insurance are you looking for?"}}
        {{input type="range" value=employersLiability min=1000 max=1000000 step=1000}}
        {{#unless isEmployersLiabilityValid}}
          <div class="form__control__error">
            You must enter a number
          </div>
        {{/unless}}
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        <span class="step-no">7</span>
        Sum insured for Professional Indemnity:
      </label>
      <div {{bind-attr class=":form__control isProfessionalIndemnityValid:form__control--invalid"}}>
        <div class="input-price">£</div>
        {{input type="text" value=professionalIndemnity placeholder="How much insurance are you looking for?"}}
        {{input type="range" value=professionalIndemnity min=1000 max=1000000 step=1000}}
        {{#unless isProfessionalIndemnityValid}}
          <div class="form__control__error">
            You must enter a number
          </div>
        {{/unless}}
      </div>
    </div>
  </form>
  <div class="content__footer clearfix">
    <button {{bind-attr class=":btn isValid::btn--inactive"}} {{action 'save'}}>
      View my quote
      <i class="ss-navigateright"></i>
    </button>
  </div>
</section>
