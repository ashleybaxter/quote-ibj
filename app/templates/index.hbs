<section class="content">
  <form class="form">
    <h1>Get a Quote</h1>
    <p class="margin-bottom-20">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
    <hr />

    <div class="form__group">
      <label class="form__group__label">
        <span class="step-no">1</span>
        Occupation:
      </label>
      <div class="form__control">
        <div class="btn-group radio-btn-group">
          {{#btn-group-radio-input groupValue=occupation value="designer"}}
            <span class="btn__title">
              <i class="ss-pencilbrush"></i>
              Designer
            </span>
            <span class="btn__msg ss-delete">What good taste you have!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=occupation value="developer"}}
            <span class="btn__title">
              <i class="ss-tools"></i>
              Developer
            </span>
            <span class="btn__msg ss-delete">Building stuff is cool!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=occupation value="consultant"}}
            <span class="btn__title">
              <i class="ss-binoculars"></i>
              Consultant
            </span>
            <span class="btn__msg ss-delete">Sharing your experience? Nice!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=occupation value="other" classNames="radio-input-text"}}
            <span class="btn__title btn__title--input">
              <i class="ss-database"></i>
              Other
            </span>
            <span class="btn__msg btn__input ss-delete">
              {{input type="text" placeholder="Enter your Occupation" value=otherOccupation}}
            </span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>

    <div class="form__group">
      <label class="form__group__label">
        <span class="step-no">2</span>
        Experience:
      </label>
      <div class="form__control">
        <div class="btn-group radio-btn-group">
          {{#btn-group-radio-input groupValue=experience value="<1"}}
            <span class="btn__title">
              <i class="ss-award"></i>
              1 year or less
            </span>
            <span class="btn__msg ss-delete">Just getting started? That's great.</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=experience value="1-3"}}
            <span class="btn__title">
              <i class="ss-medal"></i>
              1-3 years
            </span>
            <span class="btn__msg ss-delete">Looks like everything is going well.</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=experience value="3-5"}}
            <span class="btn__title">
              <i class="ss-badge"></i>
              3-5 years
            </span>
            <span class="btn__msg ss-delete">I see you're experienced at this.</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=experience value=">5"}}
            <span class="btn__title">
              <i class="ss-crown"></i>
              5 years +
            </span>
            <span class="btn__msg ss-delete">You're an industry veteran!</span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        <span class="step-no">3</span>
        Business Type:
      </label>
      <div class="form__control">
        <div class="radio-btn-group">
          {{#btn-group-radio-input groupValue=businessType value="one" classNames="btn--large"}}
            <span class="btn__title">
              <i class="ss-home"></i>
              Sole Trader
            </span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=businessType value="two" classNames="btn--large"}}
            <span class="btn__title">
              <i class="ss-school"></i>
              Partnership
            </span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=businessType value="three" classNames="btn--large"}}
            <span class="btn__title">
              <i class="ss-castle"></i>
              Limited Company
            </span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        <span class="step-no">4</span>
        How many employees do you have?
      </label>
      <div {{bind-attr class=":form__control isNumberOfEmployeesValid:form__control--invalid"}}>
        <div class="input-price"><i class="ss-malefemale"></i></div>
        {{input type="text" value=numberOfEmployees placeholder=""}}
        {{number-error number=numberOfEmployees}}
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        <span class="step-no">5</span>
        Sum insured for Public Liability:
      </label>
      <div {{bind-attr class=":form__control isPublicLiabilityValid:form__control--invalid :clearfix"}}>
        <div class="form__control__left">
          <div class="input-price">£</div>
          {{input type="text" value=publicLiability placeholder="Amount"}}
        </div>
        <div class="form__control__right">
          {{input type="range" class="input-range" value=publicLiability min=0 max=1000000 step=10000}}
        </div>
        {{number-error number=publicLiability}}
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        <span class="step-no">6</span>
        Sum insured for Employers Liability:
      </label>
      <div {{bind-attr class=":form__control isEmployersLiabilityValid:form__control--invalid :clearfix"}}>
        <div class="form__control__left">
          <div class="input-price">£</div>
          {{input type="text" value=employersLiability placeholder="Amount"}}
        </div>
        <div class="form__control__right">
          {{input type="range" value=employersLiability min=0 max=1000000 step=10000}}
        </div>
        {{number-error number=employersLiability}}
      </div>
    </div>
    <div class="form__group form__group--large">
      <label class="form__group__label">
        <span class="step-no">7</span>
        Sum insured for Professional Indemnity:
      </label>
      <div {{bind-attr class=":form__control isProfessionalIndemnityValid:form__control--invalid :clearfix"}}>
        <div class="form__control__left">
          <div class="input-price">£</div>
          {{input type="text" value=professionalIndemnity placeholder="Amount"}}
        </div>
        <div class="form__control__right">
          {{input type="range" value=professionalIndemnity min=0 max=1000000 step=10000}}
        </div>
        {{number-error number=professionalIndemnity}}
      </div>
    </div>

    <div class="form__group form__group--large">
      <label class="form__group__label">
      <span class="step-no">8</span>
        Legal Expenses
      </label>
      <div class="form__control">
        <div class="btn-group radio-btn-group radio-btn-group--half">
          {{#btn-group-radio-input groupValue=hasLegalExpenseCover value=true}}
            <span class="btn__title">
               £100,000
            </span>
            <span class="btn__msg ss-delete">No problem!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=hasLegalExpenseCover value=false}}
            <span class="btn__title">
               Not required
            </span>
            <span class="btn__msg ss-delete">No problem!</span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>

    <div class="form__group form__group--large">
      <label class="form__group__label">
      <span class="step-no">9</span>
        Building
      </label>
      <div class="form__control">
        <div class="btn-group radio-btn-group radio-btn-group--half">
          {{#btn-group-radio-input groupValue=hasBuildingCover value=true}}
            <span class="btn__title">
                Include this cover
            </span>
            <span class="btn__msg ss-delete">No problem!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=hasBuildingCover value=false}}
            <span class="btn__title">
                Don't include this cover
            </span>
            <span class="btn__msg ss-delete">No problem!</span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>

    {{#if hasBuildingCover}}
      <div class="form__group form__group--large">
        <label class="form__group__label">

          Select how much it would cost to rebuild your property from scratch
        </label>
        <div {{bind-attr class=":form__control isBuildingRebuildCostsValid:form__control--invalid :clearfix"}}>
          <div class="form__control__left">
            <div class="input-price">£</div>
            {{input type="text" value=buildingRebuildCost placeholder="Amount"}}
          </div>
          <div class="form__control__right">
            {{input type="range" value=buildingRebuildCost min=0 max=1000000 step=10000}}
          </div>
          {{number-error number=buildingRebuildCost}}
        </div>
      </div>
    {{/if}}

    <div class="form__group form__group--large">
      <label class="form__group__label">
      <span class="step-no">10</span>
        Business / Office Equipment
      </label>
      <div class="form__control">
        <div class="btn-group radio-btn-group radio-btn-group--half">
          {{#btn-group-radio-input groupValue=hasEquipmentCover value=true}}
            <span class="btn__title">
                Include this cover
            </span>
            <span class="btn__msg ss-delete">No problem!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=hasEquipmentCover value=false}}
            <span class="btn__title">
                Don't include this cover
            </span>
            <span class="btn__msg ss-delete">No problem!</span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>

    {{#if hasEquipmentCover}}
      <div class="form__group form__group--large">
        <label class="form__group__label">

          Select how much it would cost to replace all of your business / office equipment.
        </label>
        <div {{bind-attr class=":form__control isOfficeCostsValid:form__control--invalid :clearfix"}}>
          <div class="form__control__left">
            <div class="input-price">£</div>
            {{input type="text" value=equipmentReplacementCost placeholder="Amount"}}
          </div>
          <div class="form__control__right">
            {{input type="range" value=equipmentReplacementCost min=0 max=1000000 step=10000}}
          </div>
          {{number-error number=equipmentReplacementCost}}
        </div>
      </div>
    {{/if}}

  </form>
  <div class="content__footer clearfix">
    <button {{bind-attr class=":btn isEstimateValid::btn--inactive"}} {{action 'save'}}>
      View my quote
      <i class="ss-navigateright"></i>
    </button>
  </div>
</section>
