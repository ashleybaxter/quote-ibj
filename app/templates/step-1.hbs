<section class="content progress">
  <ul class="clearfix">
    <li class="active"><span>1</span></li>
    <li><span>2</span></li>
    <li><span>3</span></li>
    <li><span>4</span></li>
  </ul>
</section>
<section class="content">
  <form class="form">
    <h3>Please tell us about your business</h3>
    <div class="form__group">
      <label class="form__group__label">
        Occupation:
      </label>
      <div class="form__control">
        <div class="btn-group radio-btn-group">
          {{#btn-group-radio-input groupValue=occupation value="designer"}}
            <span class="btn__title">
              <i class="ss-pencilbrush"></i>
              Designer
            </span>
            <span class="btn__msg ss-delete">What good taste you have!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=occupation value="developer"}}
            <span class="btn__title">
              <i class="ss-tools"></i>
              Developer
            </span>
            <span class="btn__msg ss-delete">Building stuff is cool!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=occupation value="consultant"}}
            <span class="btn__title">
              <i class="ss-binoculars"></i>
              Consultant
            </span>
            <span class="btn__msg ss-delete">Sharing your experience? Nice!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=occupation value="other" classNames="radio-input-text"}}
            <span class="btn__title btn__title--input">
              <i class="ss-database"></i>
              Other
            </span>
            <span class="btn__msg btn__input ss-delete">
              {{input type="text" placeholder="Enter your Occupation" value=otherOccupation}}
            </span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>

    <div class="form__group form__group--large">
      <label class="form__group__label">
        Do you have a secondary business activity / secondary trade?
      </label>
      <div class="form__control">
        <div class="btn-group radio-btn-group">
          {{#btn-group-radio-input groupValue=hasSecondTrade value=true classNames="radio-input-text"}}
            <span class="btn__title btn__title--input">
              <i class="ss-cashregister"></i>
              Yes
            </span>
            <span class="btn__msg btn__input ss-delete">
              {{input type="text" placeholder="What is your secondary business" value=secondTrade}}
            </span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=hasSecondTrade value=false}}
            <span class="btn__title">
              <i class="ss-shoppingbag"></i>
              No
            </span>
            <span class="btn__msg ss-delete">No problem!</span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>

    <div class="form__group form__group--large">
      <label class="form__group__label">
        Business Type:
      </label>
      <div class="form__control">
        <div class="radio-btn-group">
          {{#btn-group-radio-input groupValue=businessType value="one" classNames="btn--large"}}
            <span class="btn__title">
              <i class="ss-school"></i>
              Sole Trader
            </span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=businessType value="two" classNames="btn--large"}}
            <span class="btn__title">
              <i class="ss-school"></i>
              Partnership
            </span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=businessType value="three" classNames="btn--large"}}
            <span class="btn__title">
              <i class="ss-school"></i>
              Limited Company
            </span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>

    <div class="form__group">
      <label class="form__group__label">
        Experience:
      </label>
      <div class="form__control">
        <div class="btn-group radio-btn-group">
          {{#btn-group-radio-input groupValue=experience value="<1"}}
            <span class="btn__title">
              <i class="ss-award"></i>
              1 year or less
            </span>
            <span class="btn__msg ss-delete">Just getting started? That's great.</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=experience value="1-3"}}
            <span class="btn__title">
              <i class="ss-medal"></i>
              1-3 years
            </span>
            <span class="btn__msg ss-delete">Looks like everything is going well!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=experience value="3-5"}}
            <span class="btn__title">
              <i class="ss-badge"></i>
              3-5 years
            </span>
            <span class="btn__msg ss-delete">I see you're experienced at this!</span>
          {{/btn-group-radio-input}}
          {{#btn-group-radio-input groupValue=experience value=">5"}}
            <span class="btn__title">
              <i class="ss-crown"></i>
              5 years +
            </span>
            <span class="btn__msg ss-delete">You're an industry veteran!</span>
          {{/btn-group-radio-input}}
        </div>
      </div>
    </div>

    <div class="form__group form__group--large">
      <label class="form__group__label">
        Business postcode:
      </label>
      <div {{bind-attr class=":form__control businessPostcode:form__control--invalid"}}>
        <div class="input-price"><i class="ss-addressbook"></i></div>
        {{input type="text" value=businessPostcode placeholder=""}}
      </div>
    </div>

    <div class="form__group form__group--large">
      <label class="form__group__label">
        What roughly was your turnover for your last completed financial year?
      </label>
      <div {{bind-attr class=":form__control isTurnoverValid:form__control--invalid :clearfix"}}>
        <div class="form__control__left">
          <div class="input-price">Â£</div>
          {{input type="text" value=turnover placeholder="Amount"}}
        </div>
        <div class="form__control__right">
          {{input type="range" class="input-range" value=turnover min=0 max=1000000 step=1000}}
        </div>
      </div>
      {{number-error number=turnover}}
    </div>
  </form>

  <div class="content__footer clearfix">
    <button {{bind-attr class=":btn isStep1Valid::btn--inactive"}} {{action 'save'}}>
      Next
      <i class="ss-navigateright"></i>
    </button>
  </div>
</section>
